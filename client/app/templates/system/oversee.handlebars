<div class="row">
 <legend><h3 class="text-center">后台任务监视</h3></legend>

 <div class="row">
   
      <div class="col-md-2">
        <p class="text-right">数据采集</p>
      </div>
      
      <div class="col-md-4">
      {{#if isImporting}}
     <!-- 不可用-->
       <button type="submit" class="btn btn-primary" {{action 'importData'}}  disabled="disabled">
		采集中</button>
		{{else}}
		 <button type="submit" class="btn btn-primary" {{action 'importData'}} >
		开始采集</button>
		{{/if}}
     </div>
  
      <div class="col-md-2">
        <p class="text-right">数据评测</p>
      </div>
      
      <div class="col-md-4">
		     {{#if isEvaluating}}
     <!-- 不可用-->
       <button type="submit" class="btn btn-primary" {{action 'evaluate'}}  disabled="disabled">
		评测中</button>
		{{else}}
		 <button type="submit" class="btn btn-primary" {{action 'evaluate'}} >
		开始评测</button>
		{{/if}}
      </div>
 
      
    </div> 

<p>   </p>
<p>   </p>

			 {{#if isImporting}}
			 <p class="text-center">请稍后！系统正在努力的采集数据...</p>
			<div class="progress progress-striped active">
			  <div class="progress-bar"  role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
			    <span class="sr-only">100% Complete</span>
			  </div>
			</div>
            {{/if}}
            
             {{#if ImportOK}}
			   <!-- <span class="label label-success">采集成功！</span>-->
			  {{/if}}
            
             {{#if isEvaluating}}
             <p class="text-center">请稍后！系统正在努力的评测数据...</p>
			<div class="progress progress-striped active">
			  <div class="progress-bar"  role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
			    <span class="sr-only">100% Complete</span>
			  </div>
			</div>
            {{/if}}
            
              {{#if EvalOK}}
              
			<!--	<span class="label label-success">评测成功！</span>-->
			  {{/if}}

                          



</div>